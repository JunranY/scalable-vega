{
  "$schema": "https:\/\/vega.github.io\/schema\/vega\/v5.json",
  "width": 400,
  "height": 200,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "transform": [
        {
          "type": "postgres",
          "query": {
            "signal": "'bin'"
          },
          "field": "miles_per_gallon",
          "table": "cars",
          "max_bins": 10
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {
        
      },
      "on": [
        {
          "events": "rect:mouseover",
          "update": "datum"
        },
        {
          "events": "rect:mouseout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "range"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "freq"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "range"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "freq(miles_per_gallon)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "range"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "freq"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.cylinders",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.freq",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.freq"
          },
          "fillOpacity": [
            {
              "test": "isNaN(tooltip.freq)",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}
